<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestBaruActivity">

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Request Acara Baru"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Silahkan diisi detail acara yang akan di request:"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@+id/textView38"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView39">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewRequestKegiatanPenggunaNew"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUKA GALERI"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageViewRequestKegiatanPenggunaNew"
                android:id="@+id/btnBukaGaleriRequestKegiatanPenggunaTambah"/>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Nama Acara:"
                android:layout_below="@+id/btnBukaGaleriRequestKegiatanPenggunaTambah"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/NamaAcaraRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Nama Acara"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:layout_below="@+id/textView37"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Tanggal Acara:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_below="@+id/NamaAcaraRequestEditPengguna"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/tanggalAcaraRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:layout_below="@+id/textView41"
                android:hint="Tanggal Acara"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Lokasi Acara:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_below="@+id/tanggalAcaraRequestEditPengguna"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/lokasiAcaraRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Lokasi Acara"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:layout_below="@+id/textView42"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Alamat:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_below="@+id/lokasiAcaraRequestEditPengguna"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/alamatAcaraRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Alamat"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:layout_below="@+id/textView43"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Keterangan:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_below="@+id/alamatAcaraRequestEditPengguna"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/keteranganAcaraRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Keterangan"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:layout_below="@+id/textView44"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/btnSimpanRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:fontFamily="@font/montserrat_bold"
                android:text="SIMPAN"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_below="@+id/keteranganAcaraRequestEditPengguna"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"/>

            <Button
                android:id="@+id/btnBatalRequestEditPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#B71C1C"
                android:fontFamily="@font/montserrat_bold"
                android:text="BATAL"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/keteranganAcaraRequestEditPengguna"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"/>

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/namaPenggunaRequestEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="35dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/idPenggunaRequestBaruNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="424dp"
        android:text="TextView"
        android:visibility="invisible" />

</RelativeLayout>